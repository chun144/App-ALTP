<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/player_layout_help_call_audience_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_paly_press"
        android:gravity="center"
        android:text="Khán giả"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/progress_1"
                android:layout_width="40dp"
                android:layout_height="250dp"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="@color/teal_700"
                app:progressView_min="0"
                app:progressView_max="100"
                app:progressView_orientation="vertical"
                app:progressView_animation="normal">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/progress_2"
                android:layout_width="40dp"
                android:layout_height="250dp"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="@color/teal_700"
                app:progressView_min="0"
                app:progressView_max="100"
                app:progressView_orientation="vertical"
                app:progressView_animation="normal">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/progress_3"
                android:layout_width="40dp"
                android:layout_height="250dp"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="@color/teal_700"
                app:progressView_min="0"
                app:progressView_max="100"
                app:progressView_orientation="vertical"
                app:progressView_animation="normal">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40%"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/progress_4"
                android:layout_width="40dp"
                android:layout_height="250dp"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="@color/teal_700"
                app:progressView_min="0"
                app:progressView_max="100"
                app:progressView_orientation="vertical"
                app:progressView_animation="normal">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#FFEB3B"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/bt_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_score"
        android:text="Đóng"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold">

    </Button>

</LinearLayout>